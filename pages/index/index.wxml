<view class="container"> 
 <view class="login-icon">
 <image class="login-img" src="/images/bg.jpg"></image> 
 </view> 
 <view class="login-from"> 
 <view class="announcement">欢迎使用衢州学院阳光长跑系统</view>

 <!--学号-->
 <view class="inputView"> 
  <image class="nameImage" src="/images/name.png"></image> 
  <label class="loginLab">学号：</label> 
  <input class="inputText" placeholder="请输入学号" maxlength='10' bindinput="usernameInput" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="/images/key.png"></image> 
  <label class="loginLab">密码：</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view>
 <!--提示-->
 <view class="noti">提示：默认密码为学号</view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" bindtap="login">登录</button> 
 </view> 
 </view> 
</view>