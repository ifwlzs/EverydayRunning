.loginBtn { 
 width: 90%; 
 margin-top: 40px; 
 border-radius:10px;
}

.noti{
  margin-top: 10px;
  text-align: center;
  font-size: 13px;
}
/* 公告 */
.announcement{
position: absolute; top:16rpx;
height: 100rpx; margin-left: 0px;
font-size: 45rpx; font-weight: 550;
white-space: nowrap;
color:rgb(235, 44, 44);
animation:myfirst 6s linear infinite;
/* 滚动的速度 */
}
@keyframes myfirst{
0% {margin-left:750rpx;} 
100% {margin-left:-500rpx; margin-left: 1rpx;}
/* 滚动的位置到哪里 */
}
.scroll_view_border{
position: relative; width: 100%; background: rgba(0, 0, 0, 0.2);
height: 100rpx; overflow: hidden;
align-content: center;
}
