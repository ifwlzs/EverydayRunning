/* pages/submit/submit.wxss */
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
} 
/* bg */
.errorbg{
  height: 200px;
  width: 100%;
}
/*表单内容*/
.login-from { 
 margin-top: 1px; 
 flex: auto; 
 height:100%; 
} 
 
.inputView { 
 /* background-color: #fff;  */
 margin-top: 20px;
 line-height: 50px; 
 border-radius:30px;
 border:1px solid #999999;
} 
 
/*输入框前图片*/
.timeImage, .routeImage,.phoneImage,.remakesImage { 
 margin-left: 22px; 
 width: 18px; 
 height: 16px
} 
 
.inputLab { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px
} 
.inputTextDate{
  flex: block;
  margin: 15px 10px 15px 10px; 
  width: 100%; 
  height: 30px;
  margin-right: 10px; 
  font-size: 16px
}
.inputText { 
 float: right; 
 text-align: left; 
 margin-right: 10px; 
 margin-top: 15px;
 color: #cccccc; 
 font-size: 13px
} 
/*按钮*/
.submitBtnView { 
 width: 100%; 
 height: auto; 
 /* background-color:#DCDCDC;  */
 margin-top: 50px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
} 
 
.submitBtn { 
 width: 90%; 
 margin-top: 20px; 
 border-radius:10px;
}